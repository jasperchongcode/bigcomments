{
  "name": "bigcomments",
  "displayName": "BigComments",
  "description": "Create large decorative and auto-resizing comments for readability",
  "publisher": "Jasper Chong",
  "version": "0.0.2",
  "repository": {
    "url": "https://github.com/jasperchongcode/bigcomments"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other", "Extension Packs", "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {"command": "bigcomments.defaultcommentbox",
    "title":"Default Comment Box"},
    {"command": "bigcomments.customcommentbox", "title":"Custom Comment Box"},
    {"command": "bigcomments.defaultcommentboxinline", "title":"Default Comment Box inline"},
    {"command":"bigcomments.bigcustomcommentbox", "title":"Big Custom Comment Box"}
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
